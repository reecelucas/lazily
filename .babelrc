{
    "presets": [
        [
            "env", {
                "targets": {
                    "browsers": [
                        "last 4 versions",
                        "safari >= 7",
                        "ie >= 9"
                    ]
                }
            }
        ]
    ],
    "env": {
        "production": {
            "presets": ["minify"]
        }
    },
    "plugins": [
        "add-module-exports",
        "transform-es2015-modules-umd"
    ]
}
