{
    "name": "lazily.js",
    "version": "1.1.6",
    "description": "Lightweight image lazy-loader using the intersection observer API.",
    "main": "dist/index.js",
    "module": "dist/index.esm.js",
    "unpkg": "dist/lazily.min.js",
    "author": "Reece Lucas <reecelucas@sky.com>",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/reecelucas/lazily.git"
    },
    "files": [
        "dist",
        "index.d.ts",
        "LICENSE",
        "README.md"
    ],
    "keywords": [
        "lazy",
        "load",
        "lazyload",
        "lazy-load",
        "intersection-observer",
        "intersection",
        "observer",
        "images",
        "performance",
        "lightweight",
        "js"
    ],
    "scripts": {
        "clean": "rimraf dist/*",
        "build": "cross-env BABEL_ENV=development babel index.js --out-file 'dist/index.js'",
        "build:min": "cross-env BABEL_ENV=production babel index.js --out-file 'dist/lazily.min.js' --source-maps",
        "build:esm": "cross-env BABEL_ENV=esm babel index.js --out-file 'dist/index.esm.js'",
        "build:all": "npm run build && npm run build:min && npm run build:esm",
        "lint": "eslint 'index.js'",
        "format": "prettier --write 'index.js'",
        "test": "NODE_ENV=test jest",
        "test:coverage": "jest --coverage --collectCoverageFrom 'index.js'",
        "precommit": "npm run lint && npm run format",
        "prepublishOnly": "npm run clean && npm run lint && npm run test && npm run build:all"
    },
    "devDependencies": {
        "babel-cli": "^6.26.0",
        "babel-core": "^6.26.3",
        "babel-jest": "^23.0.1",
        "babel-loader": "^7.1.4",
        "babel-plugin-add-module-exports": "^0.2.1",
        "babel-plugin-transform-es2015-modules-umd": "^6.24.1",
        "babel-preset-env": "^1.7.0",
        "babel-preset-minify": "^0.4.3",
        "cross-env": "^5.1.6",
        "eslint": "^4.19.1",
        "eslint-config-airbnb": "^16.1.0",
        "eslint-config-prettier": "^2.9.0",
        "eslint-loader": "^2.0.0",
        "eslint-plugin-import": "^2.12.0",
        "eslint-plugin-jsx-a11y": "^6.0.3",
        "eslint-plugin-react": "^7.9.1",
        "husky": "^0.14.3",
        "jest": "^23.1.0",
        "path": "^0.12.7",
        "prettier": "^1.13.4",
        "regenerator-runtime": "^0.11.1",
        "rimraf": "^2.6.2"
    }
}
